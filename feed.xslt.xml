<?xml version="1.0" encoding="UTF-8"?>
<xsl:stylesheet version="1.0" xmlns:xsl="http://www.w3.org/1999/XSL/Transform">

<xsl:template match="/">
  <html>
    <head>
      <title>DemonKingSwarn’s Blog</title>
      <style>
        /* Add your CSS styles here */
        body {
          font-family: Arial, sans-serif;
        }
        h1 {
          color: #333;
        }
        .entry {
          margin-bottom: 20px;
          border-bottom: 1px solid #ccc;
          padding-bottom: 20px;
        }
        .entry h2 {
          color: #666;
        }
        .entry p {
          margin-bottom: 10px;
        }
        .entry a {
          color: #007bff;
          text-decoration: none;
        }
        .entry a:hover {
          text-decoration: underline;
        }
      </style>
    </head>
    <body>
      <h1>DemonKingSwarn’s Blog</h1>
      <xsl:apply-templates select="feed/entry"/>
    </body>
  </html>
</xsl:template>

<xsl:template match="entry">
  <div class="entry">
    <h2><xsl:value-of select="title"/></h2>
    <p><xsl:value-of select="published"/></p>
    <p><xsl:value-of select="summary"/></p>
    <p><a href="{link/@href}">Read more...</a></p>
  </div>
</xsl:template>

</xsl:stylesheet>

---
layout: null
---
[
  {% for post in site.categories.posts %}
    {
      "title": "{{ post.title | escape }}",
      "url": "/blog{{ post.url }}",
      "category": "posts",
      "date": "{{ post.date | date: "%B %-d, %Y" }}",
      "content": "{{ post.content | strip_html | strip_newlines | escape }}"
    }{% unless forloop.last %},{% endunless %}
  {% endfor %}
  {% if site.categories.braindumps and site.categories.braindumps.size > 0 %}
    {% if site.categories.posts.size > 0 %},{% endif %}
    {% for braindump in site.categories.braindumps %}
      {
        "title": "{{ braindump.title | escape }}",
        "url": "/blog{{ braindump.url }}",
        "category": "braindumps",
        "date": "{{ braindump.date | date: "%B %-d, %Y" }}",
        "content": "{{ braindump.content | strip_html | strip_newlines | escape }}"
      }{% unless forloop.last %},{% endunless %}
    {% endfor %}
  {% endif %}
]
